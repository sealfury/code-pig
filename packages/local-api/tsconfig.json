{
  "compilerOptions": {
    /* Language and Environment */
    "target": "es5",

    /* Modules */
    "module": "commonjs",
    // "rootDir": "./",

    /* Emit */
    "declaration": true,
    "outDir": "./dist",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,

    /* Completeness */
    "skipLibCheck": true
  }
}
